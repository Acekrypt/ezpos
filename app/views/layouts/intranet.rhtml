<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="<%= @htmllang %>" lang="<%= @htmllang %>">
  <head>
    <title>home.allmed.net</title>
    <meta http-equiv="content-type" content="text/html; charset=<%= @charset %>" />
    <%= stylesheet_link_tag 'intranet/admin' %>
    <%= stylesheet_link_tag 'intranet/tabs' %>
    <%= stylesheet_link_tag 'intranet/mailr' %>
    <%= stylesheet_link_tag 'intranet/style' %>
    <%= stylesheet_link_tag 'tabbed_widget' %>

    <script type="text/javascript">
      var tabberOptions = {manualStartup:true};
      var toggleBox=function(el,el2){
          if (Element.hasClassName(el, 'invisible')) {
              new Effect.BlindDown(el2);
              Element.removeClassName(el, 'invisible');
          } else {
              new Effect.BlindUp(el2);
              Element.addClassName(el, 'invisible');
          }
      }
    </script>
    <%= javascript_include_tag 'prototype','controls', 'effects', 'dragdrop' %>
    <%= javascript_include_tag 'intranet/webmail' %>
    <%= javascript_include_tag 'intranet/global' %>
    <%= javascript_include_tag 'tabbed_widget' %>
    <%=(@content_for_scripts ? @content_for_scripts : @additional_scripts )%>
  </head>
  <body id="bodyID" onload="<%=@onload_function%>">
    <div id="wholepage">

      <div id="container">

        <div id="logout">
          <%= link_to'[Logout]', :controller=>'/login', :action=>'logout' %>
        </div>

        <div id="sidebar_outer">
          <div id="sidebar"><%= @content_for_sidebar %></div>
        </div>

        <div id="content">
          <div id="menu">
            <%= render :partial => 'layouts/intranet/tabs' %>
          </div>
          <div id="contents">
            <%= @content_for_layout %>
          </div>
          <br class="clear"/>

        </div>
      </div>
    </div>

  </body>
</html>
